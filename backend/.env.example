# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/edumind

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_EMAIL=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_NAME=EduMind
FROM_EMAIL=noreply@edumind.com

# AI Service API Keys (you can add multiple keys for fallback)
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
GROK_API_KEY=your-grok-api-key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Rate Limiting (5-tier subscription system)
GUEST_PLAN_LIMIT=5
FREE_PLAN_LIMIT=50
STUDENT_PLAN_LIMIT=500
PRO_PLAN_LIMIT=2000
ULTRA_PLAN_LIMIT=10000